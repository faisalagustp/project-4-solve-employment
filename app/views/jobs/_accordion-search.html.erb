<div class="container-fluid">
<% @jobs_searched.each do |job_new| %>
<div id="accordion2" role="tablist" aria-multiselectable="true">
  <div class="card">
    <div class="card-header" role="tab" id="headingOne">
      <h5 class="mb-0">
        <a data-toggle="collapse" data-parent="#accordion2" href="#collapseTwo<%=job_new.id.to_s%>" aria-expanded="true" aria-controls="collapseOne">
          <%= job_new.title %>
        </a>
      </h5>
    </div>

    <div id="collapseTwo<%=job_new.id.to_s%>" class="collapse" role="tabpanel" aria-labelledby="headingOne">
      <div class="card-block">

          <p>Company: <%= job_new.employer.company %></p>
          <p>Description: <%= job_new.description %></p>
          <p>Salary: <%= job_new.wage %></p>
          <% hired_count = JobApplication.where(job_id: job_new.id, status: 'Successful').count %>
          <p>No. of vacancies: <%= (job_new.positions - hired_count) %></p>
          <% has_applied = false %>
          <% job_new.job_applications.each do |job_applic| %>
          <% if job_applic.employee_id == current_user.employee_id %>
            <% has_applied = true %>
              <p>Status: <%= job_applic.status%> </p>
              <p><%= link_to "View Job Application", job_application_path(job_applic.id), class: "btn btn-primary" %></p>
          <% end %>
          <% end %>
          <% if has_applied == false %>
              <%= form_for :job_application, url: job_applications_path do |f| %>
              <%= f.text_field :coverletter %>
              <%= f.hidden_field :job_id, value: job_new.id %>
              <%= f.hidden_field :employee_id, value: current_user.employee_id %>
              <%= f.hidden_field :status, value: "In Progress" %>
              <p><%= f.submit 'Apply', class:"btn btn-primary" %></p>
              <% end %>
            <% end %>
          </div>
        </div>
      </div>
    </div>
    <% end %>
    </div>
