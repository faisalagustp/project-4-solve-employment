<h1>Jobs List</h1>
<%= @current_user.inspect %>
<%= link_to "View All Job Applications", job_applications_path, class: "btn btn-primary" %>
  <%if current_user.role == 'employer'%>
  <% @jobs.each_with_index do |job|%>
      <div class="container">
      <%= link_to job.title, job_path(job) %>
      </div>
      <%end%>
    <%else%>
    <% @job_applications_made.each do |job_app,index| %>
      <div id="accordion" role="tablist" aria-multiselectable="true">
        <div class="card">
          <div class="card-header" role="tab" id="headingOne">
            <h5 class="mb-0">
              <a data-toggle="collapse" data-parent="#accordion" href="#collapseOne<%= index.to_s %>" aria-expanded="true" aria-controls="collapseOne">
                <%= job_app.job.title %>
              </a>
            </h5>
          </div>

          <div id="collapseOne<%= index.to_s %>" class="collapse" role="tabpanel" aria-labelledby="headingOne">
            <div class="card-block">
              <ul style="list-style: none">
                <li>Description: <%= job_app.job.description %></li>
                <li>Salary: <%= job_app.job.wage %></li>
                <li>Status: <%= job_app.status.capitalize%> </li>
                </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>
  <%end%>
