<div class="container" style="padding: 20px;">
  <div class = "col-xs-22 col-sm-6 col-lg-8">
      <h2>Edit <%= resource_name.to_s.humanize %></h2>

    <%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put, :multipart => true }) do |f| %>
      <%= devise_error_messages! %>

      <div class="form-group row">
        <%= label_tag :image, 'Profile Picture', :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-5">
        <%= file_field_tag :image, :class => "btn btn-default"%>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :email, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-5">
        <%= f.email_field :email, autocomplete: "off", autofocus: true, :class => "form-control" %>
        </div>
      </div>

      <% if devise_mapping.confirmable? && resource.pending_reconfirmation? %>
        <div>Currently waiting confirmation for: <%= resource.unconfirmed_email %></div>
      <% end %>

      <% if current_user.role == 'employer' %>
      <div class="form-group row">
        <%= label_tag :name, nil, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-5">
          <%= text_field_tag :name, current_user.employer.name, autofocus: true, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= label_tag :company, nil, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-5">
          <%= text_field_tag :company, current_user.employer.company, autofocus: true, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= label_tag :address, nil, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-5">
          <%= text_field_tag :address, current_user.employer.address, autofocus: true, :class => "form-control" %>
        </div>
      </div>

      <%elsif current_user.role == 'employee'%>
      <div class="form-group row">
        <%= label_tag :name, nil, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-5">
          <%= text_field_tag :name, current_user.employee.name, autofocus: true, :class => "form-control" %>
        </div>
      </div>
      <%end%>

      <div class="form-group row">
        <%= f.label :password, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-5">
          <%= f.password_field :password, autocomplete: "off", autofocus: true, :class => "form-control" %>
          <i>(leave blank if you don't want to change it)</i>
          <% if @minimum_password_length %>
          <br />
          <em><%= @minimum_password_length %> characters minimum</em>
          <% end %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :password_confirmation, :class => "col-sm-2 col-form-label"%>
        <div class="col-sm-5">
          <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: true, :class => "form-control" %>
        </div>
      </div>

      <div class="form-group row">
        <%= f.label :current_password, :class => "col-sm-2 col-form-label" %>
        <div class="col-sm-5">
          <%= f.password_field :current_password, autocomplete: "off", autofocus: true, :class => "form-control" %><i>(we need your current password to confirm your changes)</i><br />
        </div>
      </div>

      <div class="field">
      </div>

      <div class="actions">
        <%= f.submit "Update", class:"btn btn-primary" %>
      </div>
    <% end %>
    <%= link_to "Back", :back, :class => "btn btn-primary" %>

  </div>
</div>
