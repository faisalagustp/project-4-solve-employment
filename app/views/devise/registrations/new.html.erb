
<h2><%if params[:role]%>
  <%=params[:role].capitalize%>
  <%else%>
  User
  <%end%>
  Registration
</h2><br />

<div class="container" style="padding: 20px;">
  <div class = "form">

        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render 'partials/error_messages', object: resource %>

        <div class="form-group row">
          <%= f.label :email, :class => "col-sm-1 col-form-label required"%>
          <div class="col-sm-3">
            <%= f.email_field :email, autofocus: true, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= label_tag :name, nil, :class => "col-sm-1 col-form-label"%>
          <div class="col-sm-3">
          <%= text_field_tag :name, nil, autofocus: true, :class => "form-control" %>
          </div>
        </div>

        <% if params[:role] == 'employer' %>
        <div class="form-group row">
          <%= label_tag :company, nil, :class => "col-sm-1 col-form-label"%>
          <div class="col-sm-3">
          <%= text_field_tag :company, nil, autofocus: true, :class => "form-control" %>
          </div>
        </div>

        <div class="form-group row">
          <%= label_tag :Company_address, nil, :class => "col-sm-1 col-form-label"%>
          <div class="col-sm-3">
          <%= text_area_tag :address, nil, autofocus: true, :class => "form-control" %>
          </div>
        </div>
        <%end%>

        <div class="form-group row">
          <%= f.label :password, :class => "col-sm-1 col-form-label required"%>
          <div class="col-sm-3">
            <%= f.password_field :password, autocomplete: "off", autofocus: true, :class => "form-control" %>
          </div>
          <% if @minimum_password_length %>
          <small>(<%= @minimum_password_length %> characters minimum)</small>
          <% end %>
        </div>

        <div class="form-group row">
          <%= f.label :password_confirmation, :class => "col-sm-1 col-form-label required"%>
          <div class="col-sm-3">
            <%= f.password_field :password_confirmation, autocomplete: "off", autofocus: true, :class => "form-control" %>
          </div>
        </div>

        <%if params[:role]%>
          <%= f.hidden_field :role, value: params[:role] %>
        <%elsif resource.role%>
          <%= f.hidden_field :role, value: resource.role %>
        <%else%>
          <div class="field">
            <%= f.label "I would like to be"  %><br />
            <%=f.select :role, ['employee', 'employer']%>
          </div>
        <%end%>

        <div class="actions">
          <%= f.submit "Sign up", class:"btn btn-primary"%>
        </div>
      <% end %>

    </div>
</div>
