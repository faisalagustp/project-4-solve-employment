<h3>Your Profile</h3>
<div class="container-fluid">
  <div class="row col-sm-1 col-md-8 box">
    <div class="col-sm-1 col-md-4">
    <p><strong>Profile Picture:</strong><br>
    <% if !@employee.image? %>
    <img src="http://api.adorable.io/avatar/<%=@employee.user.email %>" height="170px">
      <% else %>
    <img src="<%= @employee.image %>" height="150px">
    <% end %>
    </p>
    </div>

    <div class="col-sm-1 col-md-8">
      <br><br>
          <p><strong>Average Employee Rating:</strong>
            <%if @average_rating.to_i == 0%>
            <span> No ratings yet!</span>
            <%else%>
            <span id="star-rating"></span><span id="rating">  <%= @average_rating %></span>
            <%end%>
          </p>
          <p><strong>Name:</strong> <%= @employee.name %></p>
          <p><strong>Email Address:</strong> <%= @employee.user.email %></p>
      </div>
    </div>

  <div class="col-sm-1 col-md-10">
    <p><strong>Total Number of job applications: </strong>
    <span class="badge badge-pill badge-info">
    <%= @employee.job_applications.count %>
    </span>
    </p>
  </div>
</div>
