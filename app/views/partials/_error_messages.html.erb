<% if object.errors.any? %>
<div class="text-center"
    <div class="alert alert-danger">
      <p><strong>This form contains <%= pluralize(object.errors.count, 'error') %>.</strong></p>
      <ul>
        <% object.errors.full_messages.each do |msg| %>
          <li><%= msg %></li>
        <% end %>
      </ul>
    </div>
</div>
<% end %>
