<%= form_for(review) do |f| %>
  <% if review.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(review.errors.count, "error") %> prohibited this review from being saved:</h2>

      <ul>
      <% review.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="field">
    <%= f.label :rating %>
    <%= f.number_field :rating %>
  </div>

  <div class="field">
    <%= f.label :review %>
    <%= f.text_area :review %>
  </div>

  <div class="field" >
    <%= f.label :employer_id %>
    <%= f.number_field :employer_id, :value => params[:employer_id]  %>
  </div>

  <div class="field" >
    <%= f.label :employee_id %>
    <%= f.number_field :employee_id, :value => params[:employee_id] %>
  </div>

  <div class="field" >
    <%= f.label :review_for %>
    <% if current_user.role == 'employee' %>
    <%= f.text_field :review_for, :value => 'employer' %>
    <% elsif current_user.role == 'employer' %>
    <%= f.text_field :review_for, :value => 'employee' %>
    <% end %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>
<% end %>
